<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="main" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>DNA Payment</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>payment/dna_payment/active</config_path>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                    <config_path>payment/dna_payment/title</config_path>
                </field>
                <field id="terminal_id" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Terminal ID</label>
                    <config_path>payment/dna_payment/terminal_id</config_path>
                </field>
                <field id="client_id" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Client ID</label>
                    <config_path>payment/dna_payment/client_id</config_path>
                </field>
                <field id="client_secret" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Client Secret</label>
                    <config_path>payment/dna_payment/client_secret</config_path>
                </field>
                <field id="description" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Description</label>
                    <config_path>payment/dna_payment/description</config_path>
                </field>
                <field id="test_mode" translate="label" type="select" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Test Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>payment/dna_payment/test_mode</config_path>
                </field>

                <group id="dna_payment" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Test mode account</label>
                    <field id="js_url_test" translate="label" type="text" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Test JS url</label>
                        <config_path>payment/dna_payment/js_url_test</config_path>
                        <requires>
                            <field id="test_mode"/>
                        </requires>
                    </field>
                    <field id="terminal_id_test" translate="label" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Test Terminal ID</label>
                        <config_path>payment/dna_payment/terminal_id_test</config_path>
                        <requires>
                            <field id="test_mode"/>
                        </requires>
                    </field>
                    <field id="client_id_test" translate="label" type="text" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Test Client ID</label>
                        <config_path>payment/dna_payment/client_id_test</config_path>
                        <requires>
                            <field id="test_mode"/>
                        </requires>
                    </field>
                    <field id="client_secret_test" translate="label" type="text" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Test Client Secret</label>
                        <config_path>payment/dna_payment/client_secret_test</config_path>
                        <requires>
                            <field id="test_mode"/>
                        </requires>
                    </field>

                </group>
            </group>
        </section>
    </system>
</config>
